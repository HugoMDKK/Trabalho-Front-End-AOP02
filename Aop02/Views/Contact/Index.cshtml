@model SeuProjeto.Models.ContactFormModel

@{
    ViewBag.Title = "Contato";
}

<div class="contact-container">
    <h1 class="contact-title">Fale Conosco</h1>

    <!-- Mensagem de sucesso -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert-success">
            <p>@TempData["SuccessMessage"]</p>
        </div>
    }

    <!-- Formulário de Contato -->
    <form asp-action="Index" method="post" class="contact-form">
        <div class="form-group">
            <label asp-for="Nome" class="form-label"></label>
            <input asp-for="Nome" class="form-input" placeholder="Seu nome completo" />
            <span asp-validation-for="Nome" class="form-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-input" placeholder="Seu melhor email" />
            <span asp-validation-for="Email" class="form-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Mensagem" class="form-label"></label>
            <textarea asp-for="Mensagem" class="form-input" rows="5" placeholder="Digite sua mensagem aqui"></textarea>
            <span asp-validation-for="Mensagem" class="form-error"></span>
        </div>

        <button type="submit" class="form-submit">Enviar Mensagem</button>
    </form>
</div>

@section Scripts {
    <!-- Scripts para validação de formulário -->
    <partial name="_ValidationScriptsPartial" />
}
